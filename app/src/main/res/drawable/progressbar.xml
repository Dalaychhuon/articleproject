<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1440" >

    <shape
        android:innerRadius="18dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="47dp"
            android:width="47dp" />

        <gradient
            android:centerColor="#ffdc66"
            android:centerY="0.5"
            android:endColor="#f1ba05"
            android:startColor="#0efcedbd"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>